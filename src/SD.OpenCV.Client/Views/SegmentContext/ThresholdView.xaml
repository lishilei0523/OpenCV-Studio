<mah:MetroWindow x:Class="SD.OpenCV.Client.Views.SegmentContext.ThresholdView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:cm="http://caliburnmicro.com"
                 xmlns:busyIndicator="https://github.com/Peoky/BusyIndicator"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 xmlns:sd="https://github.com/lishilei0523/SD.Framework"
                 mc:Ignorable="d"
                 Title="阈值分割" 
                 Width="1440" Height="900" FontSize="14"
                 WindowStartupLocation="CenterOwner"
                 Style="{StaticResource MetroWindow.Styles.Clean}">
    <Grid>
        <Grid.RowDefinitions>
            <!--Body-->
            <RowDefinition Height="*" />
            <!--Footer-->
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <!--Body-->
        <busyIndicator:BusyMask Grid.Row="0" IndicatorType="Cupertino" IsBusy="{Binding IsBusy}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="260" />
                </Grid.ColumnDefinitions>
                <!--图像预览-->
                <GroupBox Grid.Column="0" Margin="4,4,2,4" Background="LightGray">
                    <GroupBox.HeaderTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock Text="图像预览" />
                                <Button cm:Message.Attach="PreviewImage()"
                                        Style="{StaticResource Button.Styles.Fluent.Transparent.Panel}">
                                    <WrapPanel>
                                        <iconPacks:PackIconMaterialDesign Kind="ZoomOutMap" />
                                        <TextBlock Text="查看" Margin="2,0,0,0" />
                                    </WrapPanel>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </GroupBox.HeaderTemplate>
                    <Image Source="{Binding BitmapSource}" />
                </GroupBox>
                <!--分割设置-->
                <GroupBox Grid.Column="1" Header="分割参数" Margin="2,4,4,4">
                    <StackPanel Grid.IsSharedSizeScope="True" Margin="5,20">
                        <sd:FormItem Label="分割类型：">
                            <ComboBox ItemsSource="{Binding ThresholdTypes}" 
                                      DisplayMemberPath="Value"
                                      SelectedValuePath="Key"
                                      SelectedValue="{Binding ThresholdType}"
                                      mah:TextBoxHelper.ClearTextButton="False"
                                      Style="{StaticResource ComboBox.Styles.Fluent}" />
                        </sd:FormItem>
                        <sd:FormItem Label="阈值：">
                            <mah:RangeSlider Minimum="0" Maximum="255"
                                             LowerValue="{Binding Threshold}"
                                             UpperValue="{Binding MaxValue}"
                                             Style="{StaticResource RangeSlider.Styles.Fluent}"
                                             cm:Message.Attach="
                                             [Event LowerValueChanged] = [Action SlideThreshold()];
                                             [Event UpperValueChanged] = [Action SlideThreshold()];
                                             [Event RangeSelectionChanged] = [Action SlideThreshold()]" />
                        </sd:FormItem>
                    </StackPanel>
                </GroupBox>
                <GridSplitter Grid.Column="0" Style="{StaticResource GridSplitter.Vertical}" />
            </Grid>
        </busyIndicator:BusyMask>
        <!--控制区-->
        <Grid Grid.Row="1" Style="{StaticResource Form.Styles.Submit.Grid}">
            <WrapPanel Style="{StaticResource Form.Styles.Submit.WrapPanel}">
                <Button Content="确定" cm:Message.Attach="Submit()" Style="{StaticResource Button.Styles.Fluent.Focus}" />
                <Button Content="取消" cm:Message.Attach="TryCloseAsync('false')" Style="{StaticResource Button.Styles.Fluent.Default}" />
            </WrapPanel>
        </Grid>
    </Grid>
</mah:MetroWindow>
